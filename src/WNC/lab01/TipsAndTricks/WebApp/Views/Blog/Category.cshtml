@model IPagedList<Post>

@{
	ViewData["PageTitle"] = "Các bài viết thuộc chủ đề";

	var name = (ViewBag.NameCategory ) ?? "không tìm thấy chủ đề";
}

<div class="p-4">
	@if (!string.IsNullOrWhiteSpace(name))
	{
		<h3 class="text-primary mb-3">
			Những bài viết thuộc chủ đề '@name'
		</h3>
	}

	@foreach (var postItem in Model)
	{
		<partial name="_PostList" model="postItem" />
	}

	<partial name="_Pager" model="@Model" />
</div>